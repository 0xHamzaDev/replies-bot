{
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "es2022",
		"lib": ["es2022"],
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": false,
		"outDir": "dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@db/*": ["db/*"]
		}
	},
	"include": ["src/**/*"]
}
